<!DOCTYPE html>
<html>
<head>
    <title> Address - View All</title>
</head>
<body>
        <h1><a href="/address/add">Add New Address</a> <br/></h1>

<table border="1">
    <tr><th>Street</th><th>Zip Code</th><th>Actions</th></tr>
    <% for(var i = 0; i < addresses.length; i++) { %>
    <tr>
        <td><%= addresses[i].street %></td>
        <td><%= addresses[i].zip_code %></td>
        <td>
            <a href='/address/edit/?address_id=<%= addresses[i].address_id %>'>
             Edit
            </a>
         </tr>
    <% } %>
</table>

</body>
</html>